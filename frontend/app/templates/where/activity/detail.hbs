  <WhereToTitle
    @zipcode={{this.model.location.ref}}
    @verb={{this.model.verb}}
  />
</Portal>

<div class='flex items-center justify-around'>
  ⬅️
  <h2 class='text-2xl font-bold text-center'>Today</h2>
  ➡️
</div>

<ForecastDetail
  @verb={{this.model.verb}}
  @loc={{this.model.location.ref}}
