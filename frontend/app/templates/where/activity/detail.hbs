{{page-title 'Detail'}}

<Portal @target='onboard-title'>
  <WhereToTitle
    @location={{this.model.location}}
    @verb={{this.model.data.verb}}
  />
</Portal>

<div class='flex items-center justify-around'>
  ⬅️
  <h2 class='text-2xl font-bold text-center'>{{this.model.when}}</h2>
  ➡️
</div>

<ForecastDetail
  @verb={{this.model.data.verb}}
  @location={{this.model.location}}
  @forecast={{this.model.data.forecast}}
  @sunrise={{this.model.data.location.sunrise}}
  @sunset={{this.model.data.location.sunset}}
/>