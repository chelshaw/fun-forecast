<form {{on 'submit' this.saveLocation}} ...attributes>
  <label for='zipcode'>{{@title}}</label>
  <div class='mt-2'>
    <Input id='zipcode' @type='text' @value={{this.zipcode}} placeholder='90210'
      class='dark:bg-gray-600 dark:text-white p-2' />
    <button class='py-2 px-4 bg-gray-500 text-white' type='submit'>Go</button>
  </div>
</form>