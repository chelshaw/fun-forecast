<Typography @level='h2'>{{@title}}</Typography>
<div class='grid grid-cols-2 gap-2'>
  {{#each this.activities as |activity|}}
    <LinkTo
      @route='where.activity.detail'
      @models={{array @zipcode activity.verb}}
      class='p-3 text-center min-h-24 border-4 bg-white dark:bg-slate-600 hover:border-lime-400 focus:border-lime-400 focus-within:border-lime-400 border-transparent'
    >
      <p class='text-3xl'>{{activity.icon}}</p>
      <Typography>{{activity.verb}}</Typography>
    </LinkTo>
  {{/each}}
</div>